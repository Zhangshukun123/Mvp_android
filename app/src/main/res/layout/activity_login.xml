<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_51"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18" />


    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_95"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_120"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/line_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_65"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/zhanghao"
            android:drawablePadding="@dimen/dp_10"
            android:hint="@string/hint_zhanghu"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="@dimen/dp_15"
            android:singleLine="true"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@color/line_bg_color" />


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/mima"
            android:drawablePadding="@dimen/dp_10"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/dp_15"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@color/line_bg_color" />

        <TextView
            android:id="@+id/tv_forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:padding="@dimen/dp_10"
            android:text="@string/forget_pass"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@drawable/yuanjiao"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />


</RelativeLayout>
